{
  "add-field-type": [
    {
      "name": "generalTextField",
      "class": "solr.TextField",
      "large": true,
      "stored": true,
      "multiValued": false,
      "indexAnalyzer": {
        "tokenizer": {
          "class": "solr.StandardTokenizerFactory"
        },
        "filters": [
          {
            "class": "solr.ASCIIFoldingFilterFactory",
            "preserveOriginal": true
          },
          {
            "class": "solr.LowerCaseFilterFactory"
          },
          {
            "class": "solr.KStemFilterFactory"
          },
          {
            "class": "solr.ManagedSynonymGraphFilterFactory",
            "managed": "english"
          },
          {
            "class": "solr.FlattenGraphFilterFactory"
          }
        ]
      },
      "queryAnalyzer": {
        "tokenizer": {
          "class": "solr.StandardTokenizerFactory"
        },
        "filters": [
          {
            "class": "solr.ASCIIFoldingFilterFactory",
            "preserveOriginal": true
          },
          {
            "class": "solr.LowerCaseFilterFactory"
          },
          {
            "class": "solr.KStemFilterFactory"
          },
          {
            "class": "solr.ManagedSynonymGraphFilterFactory",
            "managed": "english"
          },
          {
            "class": "solr.FlattenGraphFilterFactory"
          }
        ]
      }
    },
    {
      "name": "numeric_general",
      "class": "solr.TextField",
      "analyzer": {
        "tokenizer": {
          "class": "solr.KeywordTokenizerFactory"
        },
        "filters": [
          {
            "class": "solr.PatternReplaceFilterFactory",
            "pattern": "[^0-9.]+",
            "replacement": "",
            "replace": "all"
          }
        ]
      }
    },
    {
      "name": "shortTextField",
      "class": "solr.TextField",
      "indexAnalyzer": {
        "tokenizer": {
          "class": "solr.StandardTokenizerFactory"
        },
        "filters": [
          {
            "class": "solr.LowerCaseFilterFactory"
          },
          {
            "class": "solr.ASCIIFoldingFilterFactory",
            "preserveOriginal": true
          },
          {
            "class": "solr.BeiderMorseFilterFactory"
          },
          {
            "class": "solr.ClassicTokenizerFactory"
          },
          {
            "class": "solr.ManagedSynonymGraphFilterFactory",
            "managed": "english"
          },
          {
            "class": "solr.FlattenGraphFilterFactory"
          }
        ]
      },
      "queryAnalyzer": {
        "tokenizer": {
          "class": "solr.StandardTokenizerFactory"
        },
        "filters": [
          {
            "class": "solr.LowerCaseFilterFactory"
          },
          {
            "class": "solr.ASCIIFoldingFilterFactory",
            "preserveOriginal": true
          },
          {
            "class": "solr.BeiderMorseFilterFactory"
          },
          {
            "class": "solr.ClassicTokenizerFactory"
          },
          {
            "class": "solr.ManagedSynonymGraphFilterFactory",
            "managed": "english"
          },
          {
            "class": "solr.FlattenGraphFilterFactory"
          }
          
        ]
      }
    },
    {
      "name": "commaSeparatedText",
      "class": "solr.TextField",
      "positionIncrementGap": "100",
      "indexAnalyzer": {
        "tokenizer": {
          "class": "solr.PatternTokenizerFactory",
          "pattern": ","
        },
        "filters": [
          {
            "class": "solr.TrimFilterFactory"
          }
        ]
      },
      "queryAnalyzer": {
        "tokenizer": {
          "class": "solr.PatternTokenizerFactory",
          "pattern": ","
        },
        "filters": [
          {
            "class": "solr.TrimFilterFactory"
          }
        ]
      }
    }    
  ],
