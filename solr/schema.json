      "indexed": true,
      "stored": true
    },
    {
      "name": "Lifespan",
      "type": "numeric_general",
      "indexed": true,
      "stored": true
    },
    {
      "name": "Average_Spawn_Size",
      "type": "text_general",
      "multiValued": false,
      "stored": true
    },
    {
      "name": "Weight",
      "type": "numeric_general",
      "indexed": true,
      "stored": true
    },
    {
      "name": "Length",
      "type": "numeric_general",
      "indexed": true,
      "stored": true
    },

    {
      "name": "Gestation_Period",
      "type": "numeric_general",
      "indexed": true,
      "stored": true
    },
    {
      "name": "Top_Speed",
      "type": "numeric_general",
      "indexed": true,
